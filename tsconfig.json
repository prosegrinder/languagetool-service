{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es6"],
    "module": "ES2022",
    "rootDir": "src/",
    "moduleResolution": "Node",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "out/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "types/index.d.ts"]
}
